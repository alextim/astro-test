---
export interface Props {
  title: string;
  extraStyle?: string;
}

const { title, extraStyle = '' } = Astro.props as Props;
---

<div class={`mb-6 ${extraStyle}`}>
  <h3 class="uppercase text-center text-lg font-normal font-body">{title}</h3>
  <div class="flex flex-col">
    <slot />
  </div>
</div>
