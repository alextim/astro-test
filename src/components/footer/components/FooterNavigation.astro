---
import theme from '../theme';
import LocalizedLink from '@/components/LocalizedLink.astro';

export interface Props {
  footerNav: FooterNav;
}

const { footerNav } = Astro.props;

const styleLink = `
  ${theme.colors.text}
  mx-3
  py-2

  uppercase

  hover:text-white
  hover:no-underline
  hover:outline-none

  focus:no-underline
  focus:outline-none

  active:no-underline
  active:outline-none

  xl:mx-4
`;
---

<div class="inline-flex justify-center flex-wrap w-full">
  {footerNav.map(({ to, title }: Link) => (
    <LocalizedLink to={to} class={styleLink}>
      {title}
    </LocalizedLink>
  ))}
</div>
