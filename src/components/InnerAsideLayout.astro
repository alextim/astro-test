---
export interface Props {
  cover?: Image;
}

import getImagePath from '@/lib/getImagePath';
import Image from '@/components/Image.astro';

const { cover } = Astro.props as Props;
---

<div class="flex flex-col lg:grid lg:grid-rows-[auto_1fr] lg:grid-cols-[1fr_3fr] lg:gap-y-7">
  <div class="mb-8 lg:col-start-1 lg:col-end-1 lg:row-start-1 lg:row-end-1 lg:mb-0 lg:pr-4">
    {cover?.src && <Image src={getImagePath(cover.src)} alt={cover.alt} classes="h-auto w-full" />}
  </div>
  <div class="mb-8 lg:col-start-2 lg:col-end-2 lg:row-start-1 lg:row-end-2 lg:mb-0 lg:pl-4">
    <div class="mb-8">
      <slot name="html" />
    </div>
    <slot name="children" />
  </div>
  <div class="lg:col-start-1 lg:col-end-1 lg:row-start-2 lg:row-end-2 lg:pr-4">
    <slot name="aside" />
  </div>
</div>
