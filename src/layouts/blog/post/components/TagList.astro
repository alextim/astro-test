---
import Tag from './Tag.astro';

export interface Props {
  tags: Array<Link>;
  extraStyle?: string;
}

const { tags, extraStyle = '' } = Astro.props as Props;
---

<div class={`flex flex-wrap gap-x-4 gap-y-3 items-center items-start ${extraStyle}`} aria-label="tags" role="list">
  {tags.map(({ to, title }: Link) => <Tag {to} {title} />)}
</div>
